<article>
    <header>
      <h2><%= @movie.title %></h2>
    </header>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= @movie.released_on.to_s(:release_date) %> (<%= time_ago_in_words(@movie.released_on) %> ago)</td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(@movie) %></td>
      </tr>
    </table>
  </article>

<nav>
  <%= link_to("All Movies", root_path) %> |
  <%= link_to("Edit", edit_movie_path(@movie)) %> |
  <%= link_to('Delete', movie_path(@movie), method: :delete, data: { confirm: 'Are you sure you want to delete this movie?'}) %>
  </nav>
<%= render 'footer' %>